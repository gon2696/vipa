
@{
    ViewBag.Title = "Home Page";
}
<br />

<div class="jumbotron center-block" style="white-space:pre-line">

    <div>
        @*<a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a>*@
        <button href="https://asp.net" class="btn btn-default btn-lg center-block btn-block" style="font-weight:bold; color:white; background-color:royalblue">INGRESA CON FACEBOOK</button>
        <button href="https://asp.net" class="btn btn-default btn-lg center-block btn-block" style="font-weight:bold; color:white; background-color:red">INGRESA CON GOOGLE</button>
        <button href="https://asp.net" class="btn btn-default btn-lg center-block btn-block" data-toggle="modal" data-target="#exampleModal" style="font-weight:bold; color:white; background-color:lightseagreen">INGRESA CON TU EMAIL</button>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title" id="exampleModalLabel">Iniciar sesión</h2>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="" id="login">
                        <div class="form-group">
                            <label for="reporcorreo">Correo</label>
                            <input type="email" class="form-control" id="reporcorreo" aria-describedby="emailHelp" placeholder="Enter email">
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                        </div>
                        <div class="form-group">
                            <label for="reporcontra">Contraseña</label>
                            <input type="password" class="form-control" id="reporcontra" placeholder="Password">
                        </div>
                        @*<div class="form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Check me out</label>
                            </div>*@
                        <button type="submit" class="btn btn-primary" id="submit">Iniciar sesión</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <br />
    <div class="text-center">
        <label>
            <a class="text-center center-block" style="color: #f9005e" href="">¿Tienes una cuenta? Inicia sesión</a>
        </label>
    </div>

    <br />
    <div class="text-center">
        <label style="color: gray">
            Al continuar aceptas los <a style="color: #f9005e; text-decoration:underline" href="#">términos y condiciones</a>
        </label>
    </div>

</div>

