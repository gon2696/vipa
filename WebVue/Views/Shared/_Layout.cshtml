<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <script src="https://kit.fontawesome.com/778af07122.js" crossorigin="anonymous"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color:#f9005e">
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#f9005e">
        <div class="container">
            <div class="row">
                <h1 style="color:white">Vipa</h1>
            </div>
            <br />
            <div class="row">
                <div class="col-sm-4">                
                    <h3><a style="color:white" onclick="location.href='@Url.Action("Index", "Home")'"> Login </a></h3>
                </div>
                <div class="col-sm-4">
                    <h3><a style="color:white" onclick="location.href='@Url.Action("Registro", "Home")'"> Registro </a></h3>
                </div>
                <div class="col-sm-4">
                    <h3><a style="color:white" onclick="location.href='@Url.Action("Listar", "Home")'"> Listar reportadores </a></h3>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/login.js")
    @RenderSection("scripts", required: false)

</body>
</html>
